{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "./triangular_arbitrage/ui/web/static/js/*.js",
    "./triangular_arbitrage/ui/web/static/js/services/*.js",
    "./triangular_arbitrage/libs/BotCore.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}