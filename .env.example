# Modo de operação e provedor de ia
HUGGINGFACE_API_KEY=sua-api-key-huggingface
OPENROUTER_API_KEY=
TEST_MODE=true
DEBUG_MODE=false

# Credenciais Binance Real
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Configurações de Trading (valores menos restritivos)
MIN_PROFIT=0.05  # Reduzido de 0.2% para 0.05%
MAX_TRADE_SIZE=0.001  # Reduzido de 0.01 BTC para 0.001 BTC
MAX_SLIPPAGE=0.2  # Aumentado de 0.1% para 0.2%

# Configurações do Sistema
SAVE_TRADES_LOG=true
LOG_LEVEL=INFO  # Alterado para INFO para menos informações

# Configurações de banco de dados
DB_FILE=data/arbitrage.db
BACKUP_DIR=data/backups

# Configurações OpenRouter
OPENROUTER_API_KEY=your-api-key-here
OPENROUTER_MODEL=gpt-4

# Configurações de Cache
CACHE_TTL=500  # milisegundos
VECTOR_STORE_CACHE_SIZE=1000
MODEL_CACHE_SIZE=100

# Configurações de Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
RETRY_ATTEMPTS=3
RETRY_DELAY=2

# Configurações de Monitoramento
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_COST_TRACKING=true

# Configurações de Análise
MIN_PROFIT_PERCENTAGE=0.3
MIN_CONFIDENCE_SCORE=75
MAX_SPREAD_PERCENTAGE=0.15
MIN_LIQUIDITY_RATIO=2.0

# Configurações de Timeout
REQUEST_TIMEOUT=30
ANALYSIS_TIMEOUT=5
EXECUTION_TIMEOUT=2